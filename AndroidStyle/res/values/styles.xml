<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- =============== -->
    <!--   Blue styles   -->
    <!-- =============== -->
    
    <!-- blue title style -->
    <style name="blue_text_title">
        <item name="android:textColor">#60c4e4</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#DDD</item>
    </style>
    
    <!-- blue button style -->
    <style name="blue_button">
		<item name="android:background">@drawable/blue_button</item>
	</style>
	
    <!-- blue edit text style -->
    <style name="blue_edit_text">
		<item name="android:background">@drawable/blue_edit_text</item>
	</style>
	
    <!-- blue list view style -->
    <style name="blue_list_view">
        <item name="android:listSelector">@drawable/blue_list_view_item</item>
    </style>
    
    <!-- =============== -->
    <!--  Green styles   -->
    <!-- =============== -->
    
    <!-- green title style -->
	<style name="green_text_title">
        <item name="android:textColor">#72b817</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#DDD</item>
    </style>
    
	<!-- green button style -->
	<style name="green_button">
		<item name="android:background">@drawable/green_button</item>
	</style>
	
	<!-- green edit text style -->
    <style name="green_edit_text">
		<item name="android:background">@drawable/green_edit_text</item>
	</style>
	
    <!-- green list view style -->
    <style name="green_list_view">
        <item name="android:listSelector">@drawable/green_list_view_item</item>
    </style>
	
</resources>