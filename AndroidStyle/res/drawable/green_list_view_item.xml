<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:state_pressed="true">
       <shape>
            <gradient android:angle="270" android:centerColor="#605AA145" android:centerX="0.5" android:centerY="0.5" android:endColor="#9070c656" android:startColor="#4053933f" />
            <stroke android:width="3dp" android:color="#5070c656" />
            <corners android:radius="7dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    
    <item android:state_focused="true">
       <shape android:shape="rectangle">
            <solid android:color="#39662B" />
            <stroke android:width="3dp" android:color="#5070c656" />
            <corners android:radius="7dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>

</selector>